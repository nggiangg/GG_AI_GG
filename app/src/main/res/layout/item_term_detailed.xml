<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thuật ngữ và lĩnh vực -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTerm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thuật ngữ"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lĩnh vực"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Định nghĩa ngắn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Định nghĩa ngắn:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShortDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Định nghĩa ngắn gọn của thuật ngữ" />

        <!-- Định nghĩa chi tiết -->
        <TextView
            android:id="@+id/tvDetailedDefinitionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Định nghĩa chi tiết:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetailedDefinition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Định nghĩa chi tiết và đầy đủ của thuật ngữ" />

        <!-- Ngữ cảnh trong tài liệu -->
        <TextView
            android:id="@+id/tvContextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ngữ cảnh trong tài liệu:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngữ cảnh xuất hiện trong tài liệu gốc" />

        <!-- Liên kết đến nguồn tham khảo -->
        <TextView
            android:id="@+id/tvSourceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nguồn tham khảo:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguồn tham khảo cho thuật ngữ này" />

        <!-- Thuật ngữ liên quan -->
        <TextView
            android:id="@+id/tvRelatedTermsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thuật ngữ liên quan:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgRelatedTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.cardview.widget.CardView>